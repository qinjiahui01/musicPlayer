/* pages/singer-list/singer-list.wxss */

.container {
  width: 100%;
  height: 100%;
}

.singer-list-wrapper {
  width: 100%;
  height: 100%;
}

.singer-list-wrapper .singer-list-group {
  padding-bottom: 60rpx;
}

.singer-list-wrapper .singer-list-group .list-group-title {
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 65rpx;
  font-size: 24rpx;
  color: rgba(0,0, 0, 0.5);
}

.singer-list-wrapper .singer-list-group .list-group-content .list-group-item {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  padding: 40rpx 0 0 60rpx;
}

.singer-list-wrapper .singer-list-group .list-group-content .list-group-item image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.singer-list-wrapper .singer-list-group .list-group-content .list-group-item  text{
  margin-left: 40rpx;
  font-size: 28rpx;
}

.list-shortcut {
    position: fixed;
    z-index: 30;
    right: 0;
    top: 50%;
    -webkit-transform: translateY(-50%);
    transform: translateY(-50%);
    width: 40rpx;
    padding: 40rpx 0;
    border-radius: 20rpx;
    text-align: center;
    background: #fff;
    font-family: Helvetica;
}
.list-shortcut .item.current {
    color: #31c27c;
}
.list-shortcut .item {
  padding: 6rpx;
  line-height: 1;
  color: rgba(0,0,0,0.3);
  font-size: 24rpx;
}
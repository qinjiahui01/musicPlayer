/* pages/index/index.wxss */
.container{
  width: 100%;
}
/* 搜索栏 */
.search-wrapper {
  padding: 10rpx 30rpx;
  position: relative;
}
.search-wrapper .search{
  height: 60rpx;
  border:1px solid #999;
  border-radius: 10rpx;
  text-align: center; 
  font-size: 24rpx;
}
.search-wrapper icon{
  position: absolute;
  right: 50rpx;
  top:30rpx;
}

